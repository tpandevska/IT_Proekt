@model IT_Proekt_173032.Models.Tickets

@{
    ViewBag.Title = "Details";
}

<h4 style="display:inline-block;float:right;">
    @Html.ActionLink("Промени", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Назад кон сите настани", "Index")
</h4>


<h2 style="display:inline-block;">Детали за настанот</h2>
<hr />

<div class="box">

    <h3 style="display:inline-block;margin-top:0px"> <b> @Model.Name </b> </h3>
    <h3 style="display:inline-block;float:right;margin-top:0px"> 
    @Html.ActionLink("Купи Карта", "Purchase", new { id = Model.Id }, new { @class = "kupibtn" }) <br /> <br /> Цена: @Model.Price </h3>
    <h4>Локација: <b> @Model.Location </b> </h4>
    <h4>На @Model.Date.ToString("dd.MM.yyyy") во @Model.Time.ToString("HH:mm")</h4>
    <img src="@Model.ImgUrl" alt="" width="400px" height="350px" style="display:inline-block" />
    <br />
    <h4>@Model.Info</h4>

</div>
