@model IT_Proekt_173032.Models.Tickets

@{
    ViewBag.Title = "Purchase";
}



<div class="box">

    <h4 style="display:inline-block;float:right;">
        @Html.ActionLink("Назад кон сите настани", "Index")
    </h4>


    <h2>Купи Карти</h2>

    <h3 style="display:inline-block">Цената на овој настан е </h3><h3 id="price" style="display:inline-block;margin-left:5px;"> @Model.Price</h3>
    <br />

    <label for="sl">Одберете количина:</label>
    <select id="sl">
        <option value="1" checked>1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
    </select>
    <br />
    <label for="vkupno">Вкупно: </label>
    <input type="text" id="vkupno" disabled="disabled"/>
    <button class="btn btn-dark" id="kupi">Купи</button>

</div>



@Scripts.Render("~/bundles/jquery")

<script>

    $(document).ready(function () {
        let cena = $("#price").html();
        let txt = $("#vkupno").val(cena);
        $("#sl").change(function () {
            let v = $("#sl :selected").val();
            txt.val(v * cena);
        });

        $("#kupi").click(function () {

        });


    });
</script>